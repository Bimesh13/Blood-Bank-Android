<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad_bg"
    tools:context=".MainActivity">


    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/top"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:contentDescription=""
        android:src="@drawable/user"
        tools:ignore="ContentDescription" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="140dp"
            android:fontFamily="@font/raleway_extrabold"
            android:text="My Profile:"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/underline"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="144dp"
            android:text="_______________"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/name_label"
            android:layout_width="60dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="180dp"
            android:text="Name:"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name_detail"
            android:layout_width="300dp"
            android:layout_height="25dp"
            android:layout_marginTop="180dp"
            android:layout_toEndOf="@id/name_label"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/blood_label"
            android:layout_width="115dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="210dp"
            android:text="Blood Group:"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/blood_detail"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="210dp"
            android:layout_toEndOf="@id/blood_label"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/age_label"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="240dp"
            android:text="Age:"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/age_detail"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginLeft="-60dp"
            android:layout_marginTop="240dp"
            android:layout_toRightOf="@id/blood_label"
            android:text=""
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/address_label"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="270dp"
            android:text="Address:"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/address_detail"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_marginLeft="-30dp"
            android:layout_marginTop="270dp"
            android:layout_toRightOf="@id/blood_label"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/phone_label"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="300dp"
            android:text="Phone:"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phone_detail"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_marginStart="-43dp"
            android:layout_marginTop="300dp"
            android:layout_toRightOf="@id/blood_label"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textSize="18sp" />
    </RelativeLayout>


</RelativeLayout>