<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Name:"
        android:textSize="14sp"
        android:textColor="#555555"/>

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/name"
        android:layout_marginStart="63dp"
        android:text="Username Raj Chauhan"
        android:textColor="#fff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/blood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/name"
        android:layout_marginTop="42dp"
        android:text="Blood:"
        android:textColor="#555555"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/blood_text"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/name_text"
        android:layout_alignTop="@+id/blood"
        android:text="AB+"
        android:textSize="14sp"
        android:textColor="#fff"/>

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/blood"
        android:layout_marginTop="100dp"
        android:text="Number:"
        android:textColor="#555555"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/address_text"
        android:layout_alignTop="@+id/number"
        android:text="9860165513"
        android:textColor="#fff"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/blood"
        android:layout_marginTop="72dp"
        android:text="Address:"
        android:textColor="#555555"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/address_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/address"
        android:layout_marginStart="84dp"
        android:text="Baneshwor China NEPAL"
        android:textColor="#fff"
        android:textSize="14sp" />
</RelativeLayout>